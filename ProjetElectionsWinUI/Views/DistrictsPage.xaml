<Page
    x:Class="ProjetElectionsWinUI.Views.DistrictsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Titre -->
        <TextBlock Text="Gestion des districts"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0 0 0 20"
                   Grid.ColumnSpan="2"/>

        <!-- LISTE NATIF : ListView -->
        <ListView Grid.Column="0"
                  Margin="0 60 20 0"
                  ItemsSource="{Binding Districts}"
                  SelectedItem="{Binding SelectedDistrict, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Padding="10" Background="#EFEFEF" CornerRadius="6">
                        <TextBlock Text="{Binding NomDistrict}" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock Text="Population :" />
                        <TextBlock Text="{Binding Population}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- FORMULAIRE -->
        <StackPanel Grid.Column="1" Margin="20 60 0 0" Spacing="10">

            <TextBlock Text="Nom du district :" FontWeight="SemiBold" />
            <TextBox Text="{Binding SelectedDistrict.NomDistrict, Mode=TwoWay}"
            PlaceholderText="Ex: Hull" />
            <TextBlock Text="{Binding NomDistrictErreur}" Foreground="Red" FontSize="12"/>

            <TextBlock Text="Population :" FontWeight="SemiBold" />
            <TextBox Text="{Binding SelectedDistrict.Population, Mode=TwoWay}"
            PlaceholderText="Ex: 72000" />
            <TextBlock Text="{Binding PopulationErreur}" Foreground="Red" FontSize="12"/>


            <!-- Boutons CRUD -->
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0 20 0 0">
                <Button Content="Ajouter" Width="100" Command="{Binding AddDistrictCommand}" />
                <Button Content="Modifier" Width="100" Command="{Binding UpdateDistrictCommand}" />
                <Button Content="Supprimer" Width="100" Click="Supprimer_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
