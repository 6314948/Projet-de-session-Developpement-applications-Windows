<Page
    x:Class="ProjetElectionsWinUI.Views.DistrictsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- 
        J'ai mis un ScrollViewer au cas où la fenêtre devient trop petite.
        Ça évite que le bas de page soit coupé.
    -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- =========================== -->
            <!--          TITRE PAGE         -->
            <!-- =========================== -->
            <TextBlock Text="Gestion des districts"
                       FontSize="32"
                       FontWeight="Bold"
                       AutomationProperties.HeadingLevel="Level1"
                       Margin="0 0 0 20"
                       Grid.ColumnSpan="2" />

            <!-- =========================== -->
            <!--     LISTE DES DISTRICTS     -->
            <!-- =========================== -->
            <ListView Grid.Column="0"
                      Margin="0 60 20 0"
                      ItemsSource="{Binding Districts}"
                      SelectedItem="{Binding SelectedDistrict, Mode=TwoWay}"
                      AutomationProperties.Name="Liste des districts">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5"
                                    Padding="10"
                                    Background="#E5E5E5"
                                    CornerRadius="6">

                            <!-- Nom du district -->
                            <TextBlock Text="{Binding NomDistrict}"
                                       FontSize="20"
                                       FontWeight="SemiBold" />

                            <!-- Population -->
                            <TextBlock Text="Population :" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Population}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <!-- =========================== -->
            <!-- FORMULAIRE + LISTE CAND.   -->
            <!-- =========================== -->
            <Grid Grid.Column="1" Margin="20 60 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- =========================== -->
                <!--       FORMULAIRE DISTRICT   -->
                <!-- =========================== -->
                <StackPanel Grid.Row="0" Spacing="10">

                    <!-- Nom du district -->
                    <TextBlock Text="Nom du district :" FontWeight="SemiBold" />

                    <TextBox Text="{Binding SelectedDistrict.NomDistrict, Mode=TwoWay}"
                             PlaceholderText="Ex: Hull"
                             AutomationProperties.Name="Champ : Nom du district" />

                    <TextBlock Text="{Binding NomDistrictErreur}"
                               Foreground="Red"
                               FontSize="12"
                               TextWrapping="Wrap" />

                    <!-- Population -->
                    <TextBlock Text="Population :" FontWeight="SemiBold" />

                    <TextBox Text="{Binding SelectedDistrict.Population, Mode=TwoWay}"
                             PlaceholderText="Ex: 72000"
                             AutomationProperties.Name="Champ : Population du district" />

                    <TextBlock Text="{Binding PopulationErreur}"
                               Foreground="Red"
                               FontSize="12" />

                    <!-- Boutons CRUD -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="10"
                                Margin="0 20 0 0">

                        <Button Content="Ajouter"
                                Width="100"
                                Command="{Binding AddDistrictCommand}" />

                        <Button Content="Modifier"
                                Width="100"
                                Command="{Binding UpdateDistrictCommand}" />

                        <!-- Suppression via code-behind -->
                        <Button Content="Supprimer"
                                Width="100"
                                Click="Supprimer_Click" />
                    </StackPanel>
                </StackPanel>

                <!-- =========================== -->
                <!--  CANDIDATS DU DISTRICT       -->
                <!-- =========================== -->
                <Grid Grid.Row="1" Margin="0 40 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Sous-titre -->
                    <TextBlock Grid.Row="0"
                               Text="Candidats du district selectionne"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 10" />

                    <!-- Gagnant -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding GagnantDescription}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"
                               TextWrapping="Wrap"
                               Foreground="#333" />

                    <!-- Liste des candidats -->
                    <ListView Grid.Row="2"
                              ItemsSource="{Binding CandidatsDuDistrict}">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5"
                                            Padding="10"
                                            Background="#F5F5F5"
                                            CornerRadius="6">

                                    <TextBlock Text="{Binding Nom}"
                                               FontSize="18"
                                               FontWeight="SemiBold" />

                                    <TextBlock Text="{Binding PartiPolitique}" />

                                    <TextBlock>
                                        <Run Text="Votes : " />
                                        <Run Text="{Binding VotesObtenus}" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>

            </Grid>
        </Grid>

    </ScrollViewer>
</Page>
