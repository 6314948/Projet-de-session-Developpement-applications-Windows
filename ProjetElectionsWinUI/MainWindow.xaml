<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ProjetElectionsWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:ProjetElectionsWinUI.Views"
    mc:Ignorable="d"
    Title="Élections Gatineau">

    <!-- 
        NavigationView = menu principal de l'application.
        Permet de naviguer entre les pages : Districts, Candidats, Électeurs.
        (J’utilise ce composant parce qu’il est recommandé dans WinUI 3 
         pour faire une interface avec plusieurs pages.)
    -->
    <NavigationView x:Name="NavView"
                    PaneDisplayMode="Left"
                    IsSettingsVisible="False"
                    SelectionChanged="NavView_SelectionChanged">

        <!-- ========================== -->
        <!--     LOGO + Titre du menu   -->
        <!-- ========================== -->
        <NavigationView.PaneHeader>
            <StackPanel Orientation="Horizontal" Spacing="12">

                <!-- Logo de la Ville de Gatineau -->
                <Image Source="Assets/gatineau_logo.png"
                       Width="32"
                       Height="32"
                       Stretch="Uniform"
                       VerticalAlignment="Center" />

                <!-- Titre simple -->
                <TextBlock Text="Élections"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="16" />
            </StackPanel>
        </NavigationView.PaneHeader>

        <!-- ========================== -->
        <!--     BOUTONS DU NAVIGATION  -->
        <!-- ========================== -->
        <NavigationView.MenuItems>

            <!-- Page Districts -->
            <NavigationViewItem Content="Districts" Tag="districts">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Map" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <!-- Page Candidats -->
            <NavigationViewItem Content="Candidats" Tag="candidats">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Contact" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <!-- Page Électeurs -->
            <NavigationViewItem Content="Électeurs" Tag="electeurs">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="People" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

        </NavigationView.MenuItems>

        <!-- ========================== -->
        <!--   Contenu de la page load  -->
        <!-- ========================== -->
        <Frame x:Name="ContentFrame" />

    </NavigationView>

</Window>