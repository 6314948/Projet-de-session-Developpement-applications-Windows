<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ProjetElectionsWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:ProjetElectionsWinUI.Views"
    mc:Ignorable="d"
    Title="Élections Gatineau">

    <NavigationView x:Name="NavView"
                PaneDisplayMode="Left"
                IsSettingsVisible="False"
                SelectionChanged="NavView_SelectionChanged">

        <!-- ============= LOGO (PaneHeader) ============= -->
        <NavigationView.PaneHeader>
            <StackPanel Orientation="Horizontal" 
                        Spacing="12">
                <!-- Logo -->
                <Image Source="Assets/gatineau_logo.png"
                       Width="32"
                       Height="32"
                       Stretch="Uniform"
                       VerticalAlignment="Center" />

                <!-- Titre -->
                <TextBlock Text="Élections"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="16" />
            </StackPanel>
        </NavigationView.PaneHeader>

        <!-- ============= ITEMS DU MENU ============= -->
        <NavigationView.MenuItems>

            <NavigationViewItem Content="Districts" Tag="districts">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Map" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Candidats" Tag="candidats">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Contact" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Électeurs" Tag="electeurs">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="People" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

        </NavigationView.MenuItems>

        <!-- ============= CONTENU PRINCIPAL ============= -->
        <Frame x:Name="ContentFrame" />

    </NavigationView>

</Window>
